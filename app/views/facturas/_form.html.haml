= form_for @factura do |f|
  - if @factura.errors.any?
    #error_explanation
      %h2= "#{pluralize(@factura.errors.count, "error")} prohibited this administrador from being saved:"
      %ul
        - @factura.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :vecino
    = f.collection_select :vecino_id, Vecino.all, :id, :nombre
  .actions
    = f.submit 'Save'