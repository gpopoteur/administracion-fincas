= form_for @curso do |f|
  - if @curso.errors.any?
    #error_explanation
      %h2= "#{pluralize(@curso.errors.count, "error")} prohibited this curso from being saved:"
      %ul
        - @curso.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :duracion
    = f.number_field :duracion
  .field
    = f.label :precio
    = f.text_field :precio
  .field
    = f.label :capacidad_curso
    = f.number_field :capacidad_curso
  .field
    = f.label :fecha_inicio
    = f.date_select :fecha_inicio
  .field
    = f.label :fecha_fin
    = f.date_select :fecha_fin
  .actions
    = f.submit 'Save'
