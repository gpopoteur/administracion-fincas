= form_for @materium do |f|
  - if @materium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@materium.errors.count, "error")} prohibited this materium from being saved:"
      %ul
        - @materium.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :horas
    = f.number_field :horas
  .field
    = f.label :profesor_id
    = f.collection_select :profesor_id, Profesor.all, :id, :nombre_completo
  .actions
    = f.submit 'Save'
