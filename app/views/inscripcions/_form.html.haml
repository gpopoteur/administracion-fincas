= form_for @inscripcion do |f|
  - if @inscripcion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inscripcion.errors.count, "error")} prohibited this inscripcion from being saved:"
      %ul
        - @inscripcion.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :vecino_id
    = f.collection_select :vecino_id, Vecino.all, :id, :nombre_completo
  .field
    = f.label :curso_id
    = f.collection_select :curso_id, Curso.all, :id, :nombre
  .actions
    = f.submit 'Save'
