= form_for @profesor do |f|
  - if @profesor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profesor.errors.count, "error")} prohibited this profesor from being saved:"
      %ul
        - @profesor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :apellidos
    = f.text_field :apellidos
  .field
    = f.label :direccion
    = f.text_field :direccion
  .field
    = f.label :telefono
    = f.text_field :telefono
  .field
    = f.label :sueldo
    = f.text_field :sueldo
  .actions
    = f.submit 'Save'
