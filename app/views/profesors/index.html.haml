  %tr
    %th Nombre
    %th Apellidos
    %th Direccion
    %th Telefono
    %th Sueldo
    %th
    %th
    %th

  - @profesors.each do |profesor|
    %tr
      %td= profesor.nombre
      %td= profesor.apellidos
      %td= profesor.direccion
      %td= profesor.telefono
      %td= profesor.sueldo
      %td= link_to 'Show', profesor
      %td= link_to 'Edit', edit_profesor_path(profesor)
