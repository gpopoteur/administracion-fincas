= form_for @auditorium do |f|
  - if @auditorium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@auditorium.errors.count, "error")} prohibited this auditorium from being saved:"
      %ul
        - @auditorium.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :auditor_id
    = f.number_field :auditor_id
  .actions
    = f.submit 'Save'
